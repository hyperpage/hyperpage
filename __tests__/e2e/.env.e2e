# E2E Test Environment Configuration Sample
# This file contains sample/default values for E2E testing with Docker isolation
# Copy this file to .env.e2e and populate with your actual test credentials/API keys

# Core environment
NODE_ENV=test
NEXT_PUBLIC_NODE_ENV=test
NEXT_PUBLIC_E2E_TESTS=1
NEXT_PUBLIC_ENV_FILE=.env.e2e
CONFIG_ENV_FILE=.env.e2e
BASE_URL=http://hyperpage-e2e:3000
NEXT_PUBLIC_BASE_URL=http://hyperpage-e2e:3000
NEXTAUTH_URL=http://hyperpage-e2e:3000
HYPERPAGE_TEST_BASE_URL=http://hyperpage-e2e:3000

# Database & cache (Compose wires postgres/redis hostnames)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/hyperpage_e2e
REDIS_URL=redis://redis:6379

# Security secrets (replace with deterministic, non-production values)
SESSION_SECRET=dev_e2e_session_secret_change_me
JWT_SECRET=dev_e2e_jwt_secret_change_me
OAUTH_ENCRYPTION_KEY=dev_e2e_oauth_encryption_key_32chars

# Feature toggles used across the portal
ENABLE_CODE_REVIEWS=true
ENABLE_CICD=true
ENABLE_TICKETING=true
ENABLE_GITHUB=true
ENABLE_JIRA=true
ENABLE_GITLAB=true

# Rate limiting & misc flags
RATE_LIMIT_REQUESTS_PER_HOUR=1000
E2E_TEST=1
E2E_TESTS=1
E2E_OAUTH=0
SKIP_REAL_OAUTH=true

# GitHub Configuration (replace with test credentials/tokens)
GITHUB_TOKEN=ghp_YOUR_TEST_TOKEN_HERE
GITHUB_USERNAME=your-test-username
GITHUB_WEB_URL=https://github.com
GITHUB_OAUTH_CLIENT_ID=your_github_client_id
GITHUB_OAUTH_CLIENT_SECRET=your_github_client_secret

# Jira Configuration (replace with test credentials/tokens)
JIRA_WEB_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your_email@company.com
JIRA_API_TOKEN=your_personal_access_token
JIRA_PROJECT_KEY=YOUR_PROJECT_KEY
JIRA_OAUTH_CLIENT_ID=your_jira_client_id
JIRA_OAUTH_CLIENT_SECRET=your_jira_client_secret

# GitLab Configuration (replace with test credentials/tokens)
GITLAB_WEB_URL=https://gitlab.com
GITLAB_TOKEN=glpat-your-test-token
GITLAB_PROJECT_ID=12345
GITLAB_OAUTH_CLIENT_ID=your_gitlab_client_id
GITLAB_OAUTH_CLIENT_SECRET=your_gitlab_client_secret
