# Hyperpage Staging Environment Configuration
#
# Use this file when running a staging-like stack (docker-compose.staging.yml
# or equivalent). It mirrors `.env.production` but defaults to staging URLs.

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=postgresql://hyperpage_staging:REPLACE_WITH_PASSWORD@hyperpage-staging-postgres:5432/hyperpage_staging
POSTGRES_HOST=hyperpage-staging-postgres
POSTGRES_PORT=5432
POSTGRES_DB=hyperpage_staging
POSTGRES_USER=hyperpage_staging
POSTGRES_PASSWORD=REPLACE_WITH_PASSWORD
POSTGRES_SSL_MODE=disable

# ================================
# APPLICATION CONFIGURATION
# ================================
NODE_ENV=production
BASE_URL=https://staging-your-domain.com
NEXTAUTH_URL=https://staging-your-domain.com
NEXT_PUBLIC_BASE_URL=https://staging-your-domain.com
CONFIG_ENV_FILE=.env.staging
NEXT_PUBLIC_ENV_FILE=.env.staging

# ================================
# SECURITY SECRETS
# ================================
SESSION_SECRET=REPLACE_WITH_STAGING_SESSION_SECRET
JWT_SECRET=REPLACE_WITH_STAGING_JWT_SECRET
NEXTAUTH_SECRET=REPLACE_WITH_STAGING_NEXTAUTH_SECRET
OAUTH_ENCRYPTION_KEY=REPLACE_WITH_STAGING_OAUTH_KEY

# ================================
# TOOL INTEGRATIONS
# ================================
ENABLE_GITHUB=false
ENABLE_GITLAB=false
ENABLE_JIRA=false
ENABLE_CODE_REVIEWS=true
ENABLE_CICD=true
ENABLE_TICKETING=true

# Supply staging tokens only if you plan to hit real providers:
# GITHUB_TOKEN=github_pat_staging_token
# GITHUB_USERNAME=staging_bot
# JIRA_WEB_URL=https://yourcompany.atlassian.net
# JIRA_EMAIL=staging-service@yourcompany.com
# JIRA_API_TOKEN=staging_jira_token

# ================================
# CACHING / REDIS
# ================================
REDIS_URL=redis://hyperpage-staging-redis:6379

# ================================
# LOGGING / METRICS
# ================================
LOG_LEVEL=info
ENABLE_METRICS=true

# ================================
# OPTIONAL FLAGS
# ================================
E2E_TESTS=0
PERFORMANCE_TESTS=0
