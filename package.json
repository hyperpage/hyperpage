{
  "name": "hyperpage",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "dotenv -e .env.dev -- next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "type-check": "npx tsc --noEmit",
    "lint": "eslint app lib tools scripts __tests__",
    "lint:sec": "npx eslint app lib tools scripts __tests__ --ext .ts,.tsx --config eslint.config.js --rule 'no-console: error' --rule 'no-debugger: error' --rule 'no-alert: error'",
    "db:migrate": "drizzle-kit migrate:pg --config=drizzle.config.ts",
    "prettier": "npx prettier --check .",
    "prettier:fix": "npx prettier --write .",
    "test": "DATABASE_URL=postgresql://postgres:postgres@localhost:5432/hyperpage-testing REDIS_URL=redis://localhost:6379 vitest run",
    "test:unit": "vitest run __tests__/unit",
    "test:integration": "vitest run __tests__/integration",
    "test:integration:tools": "cross-env E2E_TESTS=1 HYPERPAGE_TEST_BASE_URL=http://localhost:3000 vitest run __tests__/integration/tools",
    "test:db": "vitest run __tests__/unit/lib __tests__/integration",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:perf": "cross-env PERFORMANCE_TESTS=1 vitest run __tests__/performance __tests__/integration/performance",
    "test:e2e": "cross-env E2E_TESTS=1 npx playwright test --config __tests__/e2e/playwright.config.ts",
    "test:e2e:headed": "cross-env E2E_TESTS=1 npx playwright test --config __tests__/e2e/playwright.config.ts --headed",
    "test:all": "npm run test && npm run test:e2e:docker",
    "test:e2e:docker": "bash ./scripts/test-e2e-docker.sh",
    "test:setup:up": "docker-compose -f docker-compose.yml -f docker-compose.testing.yml up -d",
    "test:setup:down": "docker-compose -f docker-compose.yml -f docker-compose.testing.yml down -v",
    "db:test:up": "docker-compose -f docker-compose.yml -f docker-compose.testing.yml up -d postgres redis",
    "db:test:down": "docker-compose -f docker-compose.yml -f docker-compose.testing.yml down -v",
    "db:test:reset": "npm run db:test:down && docker volume prune -f && npm run db:test:up",
    "validate": "npm run prettier:fix && npm run lint && npm run lint:sec && npm run type-check && npm run test:unit"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-query": "^5.90.5",
    "@types/ioredis": "^4.28.10",
    "@types/pg": "^8.15.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "ioredis": "^5.8.2",
    "lucide-react": "^0.545.0",
    "next": "15.5.4",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "prom-client": "^15.1.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "recharts": "^3.2.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "undici": "^7.16.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.2",
    "@next/bundle-analyzer": "^16.0.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.18.1",
    "eslint": "9.38.0",
    "eslint-config-next": "15.5.6",
    "eslint-formatter-compact": "^8.40.0",
    "jsdom": "^27.0.1",
    "tailwindcss": "^4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.9.3",
    "vitest": "^3.2.4"
  },
  "browserslist": "> 1%"
}
